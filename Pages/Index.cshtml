@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<style>

    .box {
        padding: 1.5rem;
        margin-right: 0;
        margin-left: 0;
        border-width: 0.2rem;
        border: solid #f7f7f9;
    }

</style>

@section Scripts {
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/index.js" asp-append-version="true"></script>
}

    <div class="row">
        <div class="col-md-10">
            <input id="symbol" class="form-control" value="TSLA" />
        </div>
        <div class="col-md-1">
            <button id="subscribe" class="btn btn-primary" disabled>Subscribe</button>
        </div>
    </div>

    <br />

    <div class="box">
        <form>
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Company Name</label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" id="company-name">
                </div>
            </div>
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Stock Type</label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" id="stock-type">
                </div>
            </div>
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Exchange</label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" id="exchange">
                </div>
            </div>
        </form>
    </div>

    <br />

    <div class="box">
        <form>
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Last Sale Price</label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" id="last-sale-price">
                </div>
            </div>
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Net Change</label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" id="net-change">
                </div>
            </div>
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Percentage Change</label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" id="percentage-change">
                </div>
            </div>
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Delta Indicator</label>
                <div class="col-sm-10">
                    <img id="delta-indicator" style="width: 30px;" />
                </div>
            </div>
        </form>
    </div>